{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    },
    "composite": true
  },
  "include": ["src", "env.d.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "transpileOnly": true,
    "require": ["tsconfig-paths/register", "dotenv/config"] // to make path aliases work with ts-node
  }
}
