{
  "name": "@starter/api",
  "version": "1.0.0",
  "description": "Server for starter",
  "main": "index.js",
  "private": "true",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zkindest/starter-fullstack-trpc.git"
  },
  "author": "Afroz",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zkindest/starter-fullstack-trpc/issues"
  },
  "scripts": {
    "build:1-migrate": "prisma migrate deploy",
    "start": "node dist/index",
    "dev": "dotenv -e .env.development ts-node-dev --no-notify --respawn --transpile-only -r tsconfig-paths/register src/index",
    "clean": "rm -rf dist",
    "build": "npm -s run clean && npm -s run generate && tsc",
    "lint:fix": "tsc --noEmit && eslint  --quiet --fix --ignore-path .gitignore",
    "test": "dotenv -e .env.test jest",
    "prettier": "prettier --ignore-path .gitignore --write",
    "db-up": "docker-compose up -d",
    "dev:db-seed": "dotenv -e .env.development prisma db seed",
    "test:db-seed": "dotenv -e .env.test prisma db seed",
    "db-migrate-dev": "prisma migrate dev",
    "db-down": "docker-compose down",
    "db-nuke": "docker-compose down --volumes --remove-orphans",
    "prod:prisma:gen": "prisma generate",
    "dev:prisma:gen": "dotenv -e .env.development prisma generate",
    "dev:prisma:reset": "dotenv -e .env.development prisma migrate reset",
    "test:prisma:gen": "dotenv -e .env.test -- prisma generate",
    "gen:env-types": "gen-env-types .env -o env.d.ts -e ."
  },
  "dependencies": {
    "@prisma/client": "^3.11.0",
    "@trpc/server": "^9.20.1",
    "cookie": "^0.4.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "4.17.3",
    "express-promise-router": "4.1.1",
    "module-alias": "^2.2.2",
    "superjson": "^1.8.1",
    "zod": "^3.13.4"
  },
  "devDependencies": {
    "@types/cookie": "^0.4.1",
    "@types/cors": "^2.8.12",
    "@types/express": "4.17.13",
    "@types/jest": "27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/supertest": "2.0.11",
    "gen-env-types": "^1.3.3",
    "jest": "27.5.1",
    "prisma": "^3.11.0",
    "supertest": "6.2.2",
    "ts-jest": "27.1.3",
    "ts-node": "10.6.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.14.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testTimeout": 10000,
    "testPathIgnorePatterns": [
      "dist",
      "node_modules"
    ],
    "moduleNameMapper": {
      "^~/(.*)$": "<rootDir>/src/$1"
    },
    "testMatch": [
      "**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "globals": {
      "ts-jest": {}
    },
    "testEnvironment": "node"
  },
  "prisma": {
    "seed": "ts-node -r dotenv/config prisma/seed.ts"
  },
  "packageManager": "pnpm@6.0.0",
  "_moduleAliases": {
    "~": "dist"
  }
}
